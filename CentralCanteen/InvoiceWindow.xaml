<Window x:Class="CentralCanteen.InvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CentralCanteen"
        mc:Ignorable="d"
        Title="Order Created" Height="450" Width="400" Closing="Window_Closing">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <Label Content="Order Details" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="25" Padding="0,5,5,5"/>
    <TextBlock HorizontalAlignment="Left" Margin="10,53,0,0" TextWrapping="Wrap" Text="Your order has been submitted. Your invoice is as follows:" VerticalAlignment="Top"/>
    <TextBox x:Name="TbInvoice" xml:space="preserve" TextWrapping="Wrap" AcceptsReturn="True" Margin="10,74,10,45" IsReadOnly="True" FontFamily="Courier New"
/>
    <Button x:Name="btnSave" Content="Save Invoice" HorizontalAlignment="Left" Margin="247,379,0,0" VerticalAlignment="Top" Width="125" Click="BtnSave_Click"/>
    <Button x:Name="btnBack" Content="Go Back To Menu" HorizontalAlignment="Left" Margin="10,379,0,0" VerticalAlignment="Top" Width="125" Click="BtnBack_Click"/>

  </Grid>
</Window>
